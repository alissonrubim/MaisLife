@{
    ViewBag.Title = "Product";
    var product = (MaisLifeModel.Models.produto)ViewBag.Product;
}

<div class="container store-page product-page">
    <div class="page-header">
        <h1>@Html.DisplayFor(modelItem => product.nome) <small class="right">@Html.DisplayFor(modelItem => product.unidade) Unidade(s)</small></h1>
    </div>
    <div class="row">
        <div class="col-lg-4 product-img-box">
            <img src="~/Images/know-img.png" class="img-responsive" />
        </div>
        <div class="col-lg-8 product-info-box">           
            <div class="col-lg-12">
                <div class="product-price">R$ @Html.DisplayFor(modelItem => product.preco)</div>
                <div class="product-btn">
                   
                        <a href="@Url.Action("Carrinho", "Home", new { id = product.id, local = 0, delivery = 0 })" class="btn btn-success">
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                            Adicionar ao carrinho
                        </a>
                    
                </div>
            </div>
            <div class="col-lg-12 product-description-box">
                @Html.DisplayFor(modelItem => product.descricao)
            </div>
        </div>        
    </div>
</div>
<div class="product-others">
    @foreach (var item in (List<MaisLifeModel.Models.produto>)ViewBag.Products)
    {
        <div class="col-lg-3 product-box">
            <a href="@Url.Action("Produto", "Home", new { id = item.id })">
                <div class="product">
                    <div class="product-img">
                        <img src="~/Images/know-img.png" class="img-responsive" />
                    </div>
                    <div class="product-info">
                        <ul class="list-group">
                            <li class="list-group-item">@Html.DisplayFor(modelItem => item.nome)</li>
                            <li class="list-group-item">@Html.DisplayFor(modelItem => item.unidade) Un.<div class="right">R$ @Html.DisplayFor(modelItem => item.preco)</div></li>
                        </ul>
                    </div>
                </div>
            </a>



        </div>

    }
</div>





