<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MaisLife</title>    
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <!-- UPPER BAR START -->
    <div class="navbar navbar-default upper-bar  hidden-sm hidden-xs">
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a href="#">Minha conta / Login</a></li>
                <li><a href="#">Meus pedidos</a></li>
                <li class="navbar-right navbar-iconbox">
                    <img src="~/Images/face-icon.png" />
                </li>
                <li class="navbar-right navbar-content">
                    <p>Entrega gratuita em compras a partir de R$ 100,00</p>
                </li>
            </ul>
        </div>
    </div>
    <!-- UPPER BAR END -->
    
    <!-- HEADER START -->
    <div class="navbar navbar-default header">
        <div class="container"> 
                <ul class="nav navbar-nav">
                    <li class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <a class="navbar-brand" href="#">
                            <img alt="Brand" src="~/Images/logo.png">
                        </a>
                    </li>
                    <li class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
                        <span class="glyphicon glyphicon-earphone"></span>                       
                        <div class="header-item-text">
                            <p>
                                32 32365268 <br />
                                32 99866525
                            </p>
                        </div>
                    </li>
                    <li class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
                        <span class="glyphicon glyphicon-globe"></span>
                        <div class="header-item-text">
                            <p>
                                Av. Dos Andradas <br />
                                619, Centro
                            </p>
                        </div>
                    </li>
                    <li class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                        <div class="header-item-text">
                            <p>
                                Nenhum item <br />
                                :(
                            </p>
                        </div>
                    </li>
                </ul>
        </div>
    </div>
    <!-- HEADER END -->

    <!-- MENU START -->
    <div class="navbar navbar-default menu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav hidden-sm hidden-xs">                     
                    <li><a href="#">Quem somos</a></li>
                    <li><a href="#">Nossos produtos</a></li>
                    <li><a href="#">Para a saúde</a></li>   
                    <li><a href="#">Como comprar</a></li>   
                    <li><a href="#">Contato</a></li>                                          
                </ul>
                <ul class="nav navbar-nav hidden-lg hidden-md">
                    <li><a href="#">Minha conta / Login</a></li>
                    <li><a href="#">Meus pedidos</a></li>
                    <li><a href="#">Quem somos</a></li>
                    <li><a href="#">Nossos produtos</a></li>
                    <li><a href="#">Para a saúde</a></li>
                    <li><a href="#">Como comprar</a></li>
                    <li><a href="#">Contato</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- MENU END -->

    <div class="body-content">
        @RenderBody()  
    </div>

    <footer>
        <div class="footer">
            <div class="container">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">a</div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">b</div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">c</div>
            </div>            
        </div>
        <div class="brand-footer">
            <div class="container">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <img src="~/Images/logo.png" />
                </div>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                    <div class="copyright">+Life Todos os direitos reservados &#169; @DateTime.Now.Year - Desenvolvimento QWERT</div>
                    <div class="footer-menu">
                        <ul class="nav navbar-nav">
                            <li><a href="#">Quem somos</a></li>
                            <li><a href="#">Loja virtual</a></li>
                            <li><a href="#">Contato</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>