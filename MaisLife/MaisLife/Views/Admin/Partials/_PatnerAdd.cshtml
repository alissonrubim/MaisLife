@model MaisLife.Models.Adapter.ParceiroAdapter
@using (Ajax.BeginForm("ManagerPatner", "Admin", new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "patnerTable"
    //LoadingElementId = "divProgress"
}, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })        
        <div class="col-lg-3">
            <div class="form-group">
                <div class="form-label">
                    Nome:
                </div>
                <div class="form-input">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="form-group">
                <div class="form-label">
                    Endereço:
                </div>
                <div class="form-input">
                    @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control", @placeholder = "Endereço" } })
                    @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <div class="form-label">
                    Telefone:
                </div>
                <div class="form-input">
                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Telefone" } })
                    @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <div class="form-label">
                    Mídias:
                </div>
                <div class="form-input">
                    @Html.EditorFor(model => model.Site, new { htmlAttributes = new { @class = "form-control", @placeholder = "Site" } })
                    @Html.ValidationMessageFor(model => model.Site, "", new { @class = "text-danger" })
                </div>
                <div class="form-input">
                    @Html.EditorFor(model => model.Facebook, new { htmlAttributes = new { @class = "form-control", @placeholder = "Facebook" } })
                    @Html.ValidationMessageFor(model => model.Facebook, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="form-label">
                    Imagem:
                </div>
                <div class="form-input">
                    @Html.EditorFor(model => model.Imagem, new { htmlAttributes = new { @class = "form-control", @placeholder = "Url" } })
                    @Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })
                </div>
                <div class="form-input">
                    <input type="file" name="file" class="form-control" />                   
                </div>
            </div>
        </div>
        <div class="col-lg-11">
            @if (Model != null)
            {
                <button class="btn btn-success panel-submit" type="submit" data-id="panel-submit">Alterar</button>
                <a class="btn btn-default" href="@Url.Action("Parceiros", "Admin", new RouteValueDictionary(new MaisLife.Models.Adapter.ParceiroAdapter()))">Voltar</a>
            }
            else
            {
                <button class="btn btn-success panel-submit" type="submit" data-id="panel-submit">Inserir</button>
            }
            
        </div>
       
   </div>
}
