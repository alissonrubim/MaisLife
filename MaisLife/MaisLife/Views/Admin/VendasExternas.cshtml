@{
    ViewBag.Title = "Vendas Externas";
    var orders = (List<MaisLifeModel.Pedido>)ViewBag.Orders;
    var user = (MaisLifeModel.Usuario)ViewBag.User;    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="upper-menu">
    <ul class="list-group">
        <li class="list-group-item">
            <a href="#"><span class="fa fa-plus" aria-hidden="true"></span></a>
        </li>
        <li class="list-group-item disabled" data-id="item-edit">
            <a href="#"><span class="fa fa-edit" aria-hidden="true"></span></a>
        </li>        
    </ul>
</div>
<div id="productForm" class="container admin-page patner-page">
    <div class="page-header">
        <h3>Vendedor: @user.Nome @user.Sobrenome </h3>
    </div>
    @Html.Partial("Partials/_orderAdd")
</div>
<div id="orderTable" class="container admin-page patner-page">
    <div class="page-header">
        <h1>Produtos <small class="right">Gerenciamento (@orders.Count)</small></h1>
    </div>
    @Html.Partial("Partials/_orderTable", orders)    
    <form name="item-edit" method="POST" action="~/Admin/EditarVendaExterna"></form>
</div>
<div class="fade-io">
    <div class="panel panel-default confirm-panel">
        <div class="panel-heading">
            Você tem certeza que deseja remover estes itens?
        </div>
        <div class="panel-body">
            <button class="btn btn-danger" data-id="confirm-panel-yes">Remover</button>
            <button class="btn btn-default" data-id="confirm-panel-close">Fechar</button>
        </div>
    </div>
</div>

