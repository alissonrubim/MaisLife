@{
    ViewBag.Title = "Produtos";
    var products = (List<MaisLifeModel.Produto>)ViewBag.Products;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="upper-menu">
    <ul class="list-group">
        <li class="list-group-item">
            <a href="#"><span class="fa fa-plus" aria-hidden="true"></span></a>
        </li>
        <li class="list-group-item disabled" data-id="item-edit">
            <a href="#"><span class="fa fa-edit" aria-hidden="true"></span></a>
        </li>
        <li class="list-group-item disabled" data-id="item-remove">
            <a href="#"><span class="fa fa-remove" aria-hidden="true"></span></a>
        </li>
    </ul>
</div>
<div id="productForm" class="container admin-page patner-page">
    <div class="page-header">
        <h3>Inserir Produto</h3>
    </div>
    @Html.Partial("Partials/_ProductAdd")
</div>
<div id="_ProductTable" class="container admin-page patner-page">
    <div class="page-header">
        <h1>Produtos <small class="right">Gerenciamento (@products.Count)</small></h1>
    </div>
    @Html.Partial("Partials/_ProductTable", products)
    <form name="item-remove" method="POST" action="~/Admin/RemoverProduto"></form>
    <form name="item-edit" method="POST" action="~/Admin/EditarProduto"></form>
</div>
<div class="fade-io">
    <div class="panel panel-default confirm-panel">
        <div class="panel-heading">
            Você tem certeza que deseja remover estes itens?
        </div>
        <div class="panel-body">
            <button class="btn btn-danger" data-id="confirm-panel-yes">Remover</button>
            <button class="btn btn-default" data-id="confirm-panel-close">Fechar</button>
        </div>
    </div>
</div>

