@model IEnumerable<MaisLifeModel.Pedido>
@{
    var today = DateTime.Now;   
}
<table class="table-hover">
    <tr>
        <th>Nº</th>       
        <th>Contato</th>
        <th>Cliente</th>
        <th>Endereço</th>
        <th>Método</th>
        <th>Valor</th>
        <th>Entrega</th>
        <th>Status</th>
    </tr>
    @foreach (var order in @Model)
    {
        <tr data-id="@order.Id" data-content="patner-row" data-info="unselected">
            <td style="width:30px; height: 30px;">
                @order.Id
            </td>
            <td style="width:100px;">               
                @order.Usuario_externo1.Telefone
            </td>
            <td>
                @order.Usuario_externo1.Nome
            </td>
            <td>
                @order.Endereco1.Bairro1.Nome
            </td>
            <td>
                @order.Metodo
            </td>
            <td>
                <span style="font-weight: bold;">
                   @order.Valor
                </span>
                
            </td>
            <td>
                @if (@order.Previsao_entrega < today) { 
                    <span style="font-weight: bold; color: #ce4949;">
                        @order.Previsao_entrega.ToString().Split(new Char[] { ' ' })[0]
                    </span>
                }
                else
                {
                    <span style="font-weight: bold;">
                        @order.Previsao_entrega.ToString().Split(new Char[] { ' ' })[0]
                    </span>
                }
                
            </td>
            <td>
                @order.Status
            </td>
        </tr>
    }
</table>

